@page
@model FavAudioApp.Pages.Playlists.CreateModel
@{
}

<h2 class="mb-3">New Playlist</h2>
@if (!Model.errorMessage.Equals(""))
{
    <h2>@Model.errorMessage</h2>
}

<form method="POST">
    <div class="row mb-3">
        <label for="name" class="col-md-1 col-form-label">Name</label>
        <div>
            <input type="text" class="form-control" name="name"
                   id="name" placeholder="Enter name" value="@Model.PlaylistDto.Name" />
        </div>
    </div>
    <div class="row mb-3">
        <label for="url" class="col-md-1 col-form-label">URL</label>
        <div>
            <input type="url" class="form-control" name="url"
                   id="url" placeholder="Enter URL" value="@Model.PlaylistDto.Url" />
        </div>
    </div>
    <div class="row mb-3">
        <label for="genre" class="col-md-1 col-form-label">Genre</label>
        <div>
            <input type="text" class="form-control" name="genre"
                   id="genre" placeholder="Enter genre" value="@Model.PlaylistDto.Genre" />
        </div>
    </div>
    <div class="row mb-3">
        <div class="offset-md-1 col-md-3 d-grid">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
        <div class="offset-md-1 col-md-3 d-grid">
            <a role="button" href="/Playlists/Index" class="btn btn-outline-primary">Cancel</a>
        </div>
    </div>

</form>